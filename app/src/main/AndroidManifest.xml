<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mv.listadecontatos">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaDeContatos">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MenuActivity"></activity>
        <activity android:name=".activity.NovoUsuarioActivity" />
        <activity android:name=".activity.EditarUsuarioActivity" />
        <activity android:name=".activity.NovoContatoActivity" />
        <activity android:name=".activity.ListaContatosActivity" />
        <activity android:name=".activity.EditarContatoActivity" />
    </application>

</manifest>